<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="ExampleLink.Views.Profile">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Image Source="{Binding LinkUser.profilePicture.DisplayImage.elements[1].identifiers[0].identifier}" HeightRequest="50"/>
            <Label Text="{Binding LinkUser.firstName.localized.en_US}" FontSize="30"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>